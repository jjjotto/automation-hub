<Window x:Class="AutomationHub.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationHub.App"
        mc:Ignorable="d"
        Title="Automation Hub" Height="450" Width="960">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Automation Hub Jobs" FontSize="20" FontWeight="Bold" />

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Jobs}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  Margin="0,12,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="Auto" />
                <DataGridTextColumn Header="Command" Binding="{Binding Process.Command}" Width="2*" />
                <DataGridTextColumn Header="Trigger Path" Binding="{Binding FileTrigger.WatchPath}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   FontStyle="Italic"
                   Foreground="Gray" />
    </Grid>
</Window>
